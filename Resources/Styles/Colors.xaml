<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Colors - Aviation Blue Theme -->
    <Color x:Key="Primary">#1E3A8A</Color>
    <Color x:Key="PrimaryLight">#3B82F6</Color>
    <Color x:Key="PrimaryDark">#1E40AF</Color>
    <Color x:Key="Secondary">#F59E0B</Color>
    <Color x:Key="SecondaryLight">#FCD34D</Color>
    <Color x:Key="Tertiary">#10B981</Color>
    <Color x:Key="TertiaryLight">#34D399</Color>

    <!-- Accent Colors -->
    <Color x:Key="Accent">#EC4899</Color>
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Info">#3B82F6</Color>

    <!-- Neutral Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray50">#F9FAFB</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#111827</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondary">#F9FAFB</Color>
    <Color x:Key="BackgroundTertiary">#F3F4F6</Color>

    <!-- Surface Colors -->
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceVariant">#F8FAFC</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#111827</Color>
    <Color x:Key="TextSecondary">#6B7280</Color>
    <Color x:Key="TextDisabled">#9CA3AF</Color>
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>

</ResourceDictionary>
